<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - El Tiempo WEB</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header class="bg-primary text-white mb-4">
        <div class="container py-3 d-flex justify-content-between align-items-center">
            <h1 class="h3 mb-0">El Tiempo</h1>
            <nav>
                <a class="text-white me-3" asp-controller="Home" asp-action="Index">Inicio</a>
                <a class="text-white me-3" asp-controller="Tiempo" asp-action="Index">El Tiempo</a>
                <a class="text-white" asp-controller="Python" asp-action="Index">Herramientas Python</a>
                <a class="text-white me-3" asp-controller="Rosa" asp-action="Index">Rosa de Vientos</a>
                <a class="text-white me-3" asp-controller="Home" asp-action="Index">Ciudades</a>
            </nav>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark text-white mt-4">
        <div class="container py-3 text-center">
            <span>© @DateTime.Now.Year - Tatiana Villa</span>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

